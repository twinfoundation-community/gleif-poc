{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "resolveJsonModule": true,
    "plugins": [
      { "transform": "@twin.org/nameof-transformer" }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
